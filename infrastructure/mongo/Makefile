.PHONY: test-backup

# Makefile for MongoDB backup and restore operations
test-backup:
	@echo "ğŸ§ª Running Backup & Restore Integration Test..."
	@bash -c 'set -a && source .env && set +a && bash ./test/verify_backup_restore.sh'

# Run both backups
backup: backup_mongo_user backup_mongo_ride
	@echo "âœ… All backups completed."

# Backup mongo_user
backup_mongo_user:
	@echo "ğŸ” Backing up mongo_user..."
	docker-compose run mongo_user_backup

# Backup mongo_ride
backup_mongo_ride:
	@echo "ğŸ” Backing up mongo_ride..."
	docker compose run mongo_ride_backup

# Restore from backup
restore:
	@echo "â™»ï¸  Restoring MongoDB from /backup..."
	docker compose run mongo_restore